<!DOCTYPE html>
<html>
  <head>
    <title>TaskMaster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div class="row page-header">
      <div class="col-lg-2 bg-dark" style="vertical-align: center"><center><p>Logo Here..</p></center></div>
      <div class="col-lg-10 bg-dark">
        <nav style="float:right" class="navbar navbar-expand-sm"">
          <ul class="navbar-nav >
            <li class="nav-item">
              <%= link_to 'Logout', destroy_user_session_path, class: 'nav-link text-white' %>
            </li>
          </ul>
        </nav>
        <nav class="navbar navbar-expand-sm" style="padding-left:0">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Home', dashboard_index_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Projects', projects_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Tasks', tasks_path, class: 'nav-link text-white' %>
            </li>
          </ul>
        </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 bg-secondary" style="text-align:right"><span style="padding-right:21px">Welcome <b><%= current_user.email %></b></span></div>
    </div>
    <div class="row">
      <div class="col-lg-2 bg-success">
        <nav class="navbar">
          <!-- Links -->
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'New Project', new_project_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'New Task', new_task_path, class: 'nav-link text-white' %>
            </li>
        </nav>
      </div>
      <div class="col-lg-10">
        <%= yield %>
      </div>
    </div>
    <div class="row page-footer">
      <div class="col-lg-12 bg-light">
        <br>
        <center>Copyright &nbsp;&copy;</center>
        <br>
      </div>
    </div>
  </div>
  </body>
</html>
