<h1>Welcome <%= @user.email %></h1>

<h2>Your tasks:</h2>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Created at</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.description %></td>
      <td><%= task.created_at %></td>
      <td><%= link_to 'Show', task %></td>
    </tr>
  <% end %>
  </tbody>
</table>